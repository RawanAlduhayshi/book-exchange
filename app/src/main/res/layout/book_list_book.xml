<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    <variable
        name = "bookInfo"
        type="com.rawanalduhyshi.bookexchange.data.Book"/>
    <variable
        name="oneBookViewModel"
        type="com.rawanalduhyshi.bookexchange.viewmodels.BookRoomViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/item_book_name"
            style="@style/Widget.BookExchange.ListBookTextView"
            android:layout_width="180dp"
            android:layout_marginStart="@dimen/margin_between_elements"
            android:fontFamily="sans-serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_book_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{bookInfo.name}" />

        <TextView
            android:id="@+id/item_book_description"
            style="@style/Widget.BookExchange.ListBookTextView"
            android:layout_width="100dp"
            android:layout_below="@+id/item_book_name"
            android:layout_marginStart="@dimen/margin_between_elements"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/item_book_name"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{bookInfo.description}" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
