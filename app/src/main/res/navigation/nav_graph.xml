<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.rawanalduhyshi.bookexchange.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_loginFragment_to_blankFragment"
            app:destination="@id/blankFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.rawanalduhyshi.bookexchange.ListFragment"
        android:label="fragment_list">
        <action
            android:id="@+id/action_listFragment_to_bookDetailsFragment"
            app:destination="@id/bookDetailsFragment" />

    </fragment>
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.rawanalduhyshi.bookexchange.BlankFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_blank" />
    <fragment
        android:id="@+id/bookDetailsFragment"
        android:name="com.rawanalduhyshi.bookexchange.BookDetailsFragment"
        android:label="BookDetailsFragment" >
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_bookDetailsFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>